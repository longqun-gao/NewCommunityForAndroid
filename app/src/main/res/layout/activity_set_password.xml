<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xhwl.xhwlownerapp.activity.view.RegisterView.SetPasswordActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_marginLeft="38px"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/set_password_back"
            android:layout_width="44px"
            android:layout_height="44px"
            android:background="@drawable/close"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="414px"
        android:layout_marginTop="90px"
        android:layout_marginRight="60px"
        android:layout_marginLeft="60px"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置密码"
                android:textColor="@color/setPassword"
                android:textSize="36px" />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="108px"
            android:layout_marginTop="20px"
            android:orientation="horizontal">
            <com.xhwl.xhwlownerapp.UIUtils.ClearEditText
                android:id="@+id/set_password_edit"
                android:layout_width="0dp"
                android:layout_height="100px"
                android:layout_weight="1"
                android:background="@null"
                android:hint="密码:"
                android:paddingLeft="20px"
                android:password="true"
                android:textSize="30px"
                android:textColorHint="@color/edit_hint" />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100px">

                <ImageView
                    android:id="@+id/set_pass_no_see"
                    android:layout_width="40px"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:background="@drawable/pass_no_see" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/login_line"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/set_password_btn"
                android:layout_width="match_parent"
                android:layout_height="75px"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:background="@drawable/introduce_btn_bg"/>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
